# User configuration.
[user]
	name = Matthew Sanabria
	useConfigOnly = true

# Git pull configuration.
[pull]
	rebase = false

# GitHub specific configuration.
[includeIf "gitdir:**/github.com/**"]
	path = ~/.config/git/github
[includeIf "gitdir:~/.dotfiles/**"]
	path = ~/.config/git/github

# Use SSH instead of HTTPS.
[url "git@github.com:"]
	insteadOf = https://github.com/
